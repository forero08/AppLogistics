@model ServiceReportQueryView

<div class="col">
    <div class="widget-box">
        <div class="widget-header">
            <span class="icon fa fa-th-list"></span>
            <h5>@Resource.ForHeader("ServiceReport")</h5>
        </div>
        <div class="widget-content">
            <form asp-antiforgery="true">
                <div class="row">
                    <div class="form-group col-4">
                        <div class="control-label col-6">
                            <label asp-for="ServiceId"></label>
                        </div>
                        <div class="control-content col-6">
                            <input asp-for="ServiceId" />
                        </div>
                        <div class="control-validation col">
                            <span asp-validation-for="ServiceId"></span>
                        </div>
                    </div>
                    <div class="form-group col-4">
                        <div class="control-label col-6">
                            <label asp-for="StartDate"></label>
                        </div>
                        <div class="control-content col-6">
                            <input asp-for="StartDate" type="text" />
                        </div>
                        <div class="control-validation col">
                            <span asp-validation-for="StartDate"></span>
                        </div>
                    </div>
                    <div class="form-group col-4">
                        <div class="control-label col-6">
                            <label asp-for="EndDate"></label>
                        </div>
                        <div class="control-content col-6">
                            <input asp-for="EndDate" class="datepicker" type="text" />
                        </div>
                        <div class="control-validation col">
                            <span asp-validation-for="EndDate"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-4">
                        <div class="control-label col-6">
                            <label asp-for="ClientId"></label>
                        </div>
                        <div class="control-content col-6">
                            <div mvc-lookup-for="ClientId" url="~/Lookup/Client" title="@Resource.ForLookup("Client")"></div>
                        </div>
                        <div class="control-validation col">
                            <span asp-validation-for="ClientId"></span>
                        </div>
                    </div>
                    <div class="form-group col-4">
                        <div class="control-label col-6">
                            <label asp-for="ActivityId"></label>
                        </div>
                        <div class="control-content col-6">
                            <div mvc-lookup-for="ActivityId" url="~/Lookup/Activity" title="@Resource.ForLookup("Activity")"></div>
                        </div>
                        <div class="control-validation col">
                            <span asp-validation-for="ActivityId"></span>
                        </div>
                    </div>
                    <div class="form-group col-4">
                        <div class="control-label col-6">
                            <label asp-for="EmployeeInternalCode"></label>
                        </div>
                        <div class="control-content col-6">
                            <input asp-for="EmployeeInternalCode" type="text" />
                        </div>
                        <div class="control-validation col">
                            <span asp-validation-for="EmployeeInternalCode"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-actions col-6">
                        <button class="btn btn-primary">@Resource.ForAction("Search")</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
