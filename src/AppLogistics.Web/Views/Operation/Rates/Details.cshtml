@model RateView

<div class="col">
    <div class="widget-box readonly">
        <div class="widget-header">
            <span class="icon fa fa-th-list"></span>
            <h5>@Resource.ForHeader("Rate")</h5>
            <div class="widget-header-buttons">
                <authorize action="Edit">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn">
                        <span class="fa fa-pencil-alt"></span><span class="text">@Resource.ForAction("Edit")</span>
                    </a>
                </authorize>
                <authorize action="Delete">
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn">
                        <span class="fa fa-times"></span><span class="text">@Resource.ForAction("Delete")</span>
                    </a>
                </authorize>
            </div>
        </div>
        <div class="widget-content">
            <div class="form-group">
                <div class="control-label col-md-3 col-lg-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="control-content col-md-9 col-lg-5">
                    <input asp-for="Name" />
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-3 col-lg-2">
                    <label asp-for="ClientName"></label>
                </div>
                <div class="control-content col-md-9 col-lg-5">
                    <input asp-for="ClientName" />
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-3 col-lg-2">
                    <label asp-for="ActivityName"></label>
                </div>
                <div class="control-content col-md-9 col-lg-5">
                    <input asp-for="ActivityName" />
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-3 col-lg-2">
                    <label asp-for="VehicleTypeName"></label>
                </div>
                <div class="control-content col-md-9 col-lg-5">
                    <input asp-for="VehicleTypeName" />
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-3 col-lg-2">
                    <label asp-for="Price"></label>
                </div>
                <div class="control-content col-md-9 col-lg-5">
                    <input asp-for="Price" />
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-3 col-lg-2">
                    <label asp-for="EmployeePercentage"></label>
                </div>
                <div class="control-content col-md-9 col-lg-5">
                    <input asp-for="EmployeePercentage" />
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-3 col-lg-2">
                    <label asp-for="SplitFare"></label>
                </div>
                <div class="control-content col-md-9 col-lg-5">
                    <input asp-for="SplitFare" />
                </div>
            </div>
        </div>
    </div>
</div>
