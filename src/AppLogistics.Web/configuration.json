{
  "Cookies": {
    "Antiforgery": {
      "Name": ".Web-Token"
    },
    "Auth": {
      "Name": ".Web-Auth"
    },
    "TempData": {
      "Name": ".Web-Temp"
    },
    "Session": {
      "Name": ".Web-Session"
    }
  },

  "Languages": {
    "Default": "es",
    "Supported": [
      {
        "name": "English",
        "culture": "en-US",
        "abbreviation": "en"
      },
      {
        "name": "Español",
        "culture": "es-CO",
        "abbreviation": "es"
      }
    ]
  },

  "Logging": {
    "Console": {
      "LogLevel": {
        "Default": "Debug"
      }
    },
    "File": {
      "Path": "Logs/log.txt",
      "RollSize": 5242880,
      "LogLevel": {
        "Default": "Error"
      }
    }
  },

  "Mail": {
      "AdminSenderEmail": "admin@applogistics.com",
      "AdminSenderName": "Admin App Logistics"
  },

  "SiteMap": {
    "Path": "mvc.sitemap"
  }
}
